# Ejemplo de variables de entorno para desarrollo
# Copiar este archivo como .env y modificar valores seg√∫n necesidad

# Auth Service
AUTH_DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db
AUTH_SECRET_KEY=your-super-secret-key-change-in-production-auth
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Appointments Service  
APPOINTMENTS_DATABASE_URL=postgresql://appointments_user:appointments_password@localhost:5433/appointments_db
APPOINTMENTS_SECRET_KEY=your-super-secret-key-change-in-production-appointments
APPOINTMENTS_ALGORITHM=HS256
APPOINTMENTS_AUTH_SERVICE_URL=http://localhost:8001

# Base de datos
POSTGRES_AUTH_DB=auth_db
POSTGRES_AUTH_USER=auth_user
POSTGRES_AUTH_PASSWORD=auth_password

POSTGRES_APPOINTMENTS_DB=appointments_db
POSTGRES_APPOINTMENTS_USER=appointments_user
POSTGRES_APPOINTMENTS_PASSWORD=appointments_password

# Configuraciones generales
DEBUG=true
LOG_LEVEL=info
