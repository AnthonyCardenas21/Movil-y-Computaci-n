# Variables de entorno para el sistema distribuido de turnos médicos

# Base de datos - Servicio de Autenticación
POSTGRES_DB_AUTH=auth_db
POSTGRES_USER_AUTH=auth_user
POSTGRES_PASSWORD_AUTH=auth_password
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432

# Base de datos - Servicio de Turnos
POSTGRES_DB_APPOINTMENTS=appointments_db
POSTGRES_USER_APPOINTMENTS=appointments_user
POSTGRES_PASSWORD_APPOINTMENTS=appointments_password
APPOINTMENTS_DB_HOST=localhost
APPOINTMENTS_DB_PORT=5433

# URLs de conexión a bases de datos
DATABASE_URL_AUTH=postgresql://auth_user:auth_password@auth_db:5432/auth_db
DATABASE_URL_APPOINTMENTS=postgresql://appointments_user:appointments_password@appointments_db:5432/appointments_db

# Configuración de JWT y seguridad
SECRET_KEY=your-super-secret-key-change-in-production-please-use-a-secure-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# URLs de servicios
AUTH_SERVICE_URL=http://auth_service:8000
APPOINTMENTS_SERVICE_URL=http://appointments_service:8000

# URLs externas (para pruebas desde el host)
AUTH_SERVICE_EXTERNAL_URL=http://localhost:8001
APPOINTMENTS_SERVICE_EXTERNAL_URL=http://localhost:8002

# Puertos de servicios
AUTH_SERVICE_PORT=8001
APPOINTMENTS_SERVICE_PORT=8002

# Configuración de desarrollo
DEBUG=true
ENVIRONMENT=development

# Configuración de CORS (para desarrollo)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Configuración de logs
LOG_LEVEL=INFO
